    <logger name="wire" level="WARN">
        <appender-ref ref="logcat" />
    </logger>

    <logger name="wallet" level="WARN">
        <appender-ref ref="logcat" />
    </logger>

    <logger name="dump" level="OFF">
        <appender-ref ref="logcat" />
