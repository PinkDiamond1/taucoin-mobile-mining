<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_home_grey_light"
    android:orientation="vertical">

    <io.taucoin.android.wallet.widget.ToolbarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftBackImage="@mipmap/icon_close"
        app:rightImage="@mipmap/icon_refresh"
        app:leftImagePadding="0dp"
        app:titleText="@string/main_home_title" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="#00000000"
        app:srlPrimaryColor="#00000000"
        app:srlEnablePreviewInEditMode="true">

        <io.taucoin.android.wallet.widget.refresh.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:orientation="vertical">

            <LinearLayout
                android:background="@color/color_home_grey_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:baselineAligned="true"
                android:paddingEnd="10dp"
                android:paddingTop="20dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <io.taucoin.android.wallet.widget.ProgressView
                        android:id="@+id/iv_mining_balance"
                        android:layout_width="60dp"
                        app:center_text="@string/home_mining_balance"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_height="60dp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <io.taucoin.android.wallet.widget.ProgressView
                        android:id="@+id/iv_mining_power"
                        android:layout_width="60dp"
                        app:center_text="@string/home_mining_power"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_height="60dp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <io.taucoin.android.wallet.widget.ProgressView
                        android:id="@+id/iv_mining_sync"
                        android:layout_width="60dp"
                        app:center_text="@string/home_mining_sync"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_height="60dp" />

                </FrameLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <Switch
                        android:layout_toStartOf="@+id/tv_mining_switch"
                        android:id="@+id/iv_mining_switch"
                        android:layout_width="wrap_content"
                        android:switchMinWidth="80dp"
                        android:track="@drawable/grey_switch_rect_round_bg"
                        android:thumb="@drawable/shape_switch_white"
                        android:textOn="    "
                        android:textOff="    "
                        android:checked="false"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/tv_mining_switch"
                        style="@style/style_middle_grey_dark"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center"
                        android:layout_marginStart="2dp"
                        android:layout_alignParentEnd="true"
                        android:text="@string/home_mining_off"
                        tools:ignore="RelativeOverlap" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/color_white"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:background="@color/color_home_grey_light"
                    android:layout_height="100dp"/>

                <LinearLayout
                    android:background="@drawable/white_rect_round_bg"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:gravity="bottom"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_balance_title"
                            style="@style/style_middle_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/home_balance"/>

                        <TextView
                            android:id="@+id/tv_balance"
                            style="@style/style_mining_yellow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/color_black"
                            android:gravity="center_horizontal"
                            android:text="0.00TAU"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:gravity="bottom"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_mining_income_title"
                            style="@style/style_middle_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/home_mining_income"/>

                        <TextView
                            android:id="@+id/tv_mining_income"
                            style="@style/style_mining_yellow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/color_black"
                            android:gravity="center_horizontal"
                            android:text="0.00TAU"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:gravity="bottom"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_power_title"
                            style="@style/style_middle_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="2dp"
                            android:gravity="center_horizontal"
                            android:text="@string/home_power"/>

                        <TextView
                            android:id="@+id/tv_power"
                            style="@style/style_mining_yellow"
                            android:layout_width="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginStart="15dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="0"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:gravity="bottom"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/style_middle_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="2dp"
                            android:gravity="center_horizontal"
                            android:text="@string/home_miners"/>

                        <TextView
                            android:id="@+id/tv_miners"
                            style="@style/style_mining_yellow"
                            android:layout_width="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginStart="15dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="0"/>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/style_small_grey"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/home_cpu"/>

                <TextView
                    style="@style/style_small_grey"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/home_memory"/>

                <TextView
                    style="@style/style_small_grey"
                    android:layout_width="0dp"
                    android:layout_weight="1.06"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/home_data_storage"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_cpu"
                    style="@style/style_power_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_memory"
                    style="@style/style_power_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_data_storage"
                    style="@style/style_power_black"
                    android:layout_width="0dp"
                    android:layout_weight="1.06"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/style_small_grey"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/home_chain_height"/>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_synchronized_title"
                        style="@style/style_small_grey"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:drawablePadding="2dp"
                        android:text="@string/home_synchronized"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.06"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_mined_title"
                        style="@style/style_small_grey"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="4dp"
                        android:gravity="center_horizontal"
                        android:text="@string/home_mined"/>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_chain_height"
                    style="@style/style_power_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_synchronized"
                    style="@style/style_power_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=""/>

                <io.taucoin.android.wallet.widget.LoadingTextView
                    android:id="@+id/tv_mined"
                    style="@style/style_power_black"
                    android:layout_width="0dp"
                    android:layout_weight="1.06"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center"
                    android:text=""/>

            </LinearLayout>

            <TextView
                style="@style/style_middle_yellow"
                android:id="@+id/tv_mining_transaction"
                android:layout_width="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="3dp"
                android:text="@string/home_mining_transaction"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_mining_tx"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center"
                        style="@style/style_middle_grey"
                        android:text="@string/home_mining_hash"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        style="@style/style_middle_grey"
                        android:gravity="center_horizontal|center"
                        android:text="@string/home_mining_fee"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        style="@style/style_middle_grey"
                        android:gravity="center_horizontal|center"
                        android:text="@string/home_mining_status"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    android:id="@+id/refresh_layout_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants"
                    app:srlAccentColor="#00000000"
                    app:srlPrimaryColor="#00000000"
                    app:srlEnablePreviewInEditMode="true">

                    <ListView
                        android:id="@+id/list_view_mining_tx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/color_transparent"
                        android:dividerHeight="0dp"
                        android:scrollbars="none" />

                    <io.taucoin.android.wallet.widget.refresh.ClassicsFooter
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            </LinearLayout>

        </LinearLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>