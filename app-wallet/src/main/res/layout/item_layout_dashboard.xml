<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <io.taucoin.android.wallet.widget.DashboardView
        android:id="@+id/dashboard_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        app:antiAlias="true"
        app:arcWidth="6dp"
        app:bgArcWidth="6dp"
        app:pointWidth="3dp"
        app:pointRadius="9dp"
        app:pointArcColor="@color/color_white"
        app:bgArcColor="@color/color_progress_bg"
        app:maxValue="10000"
        app:value="0"
        app:startAngle="124"
        app:sweepAngle="292"/>

    <LinearLayout
        android:layout_width="150dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|center"
        android:layout_marginTop="35dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text=""
            android:gravity="center_horizontal|center"
            android:textColor="@color/color_yellow"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="@dimen/dimen_size_36"
            app:autoSizeMinTextSize="8dp"
            app:autoSizeStepGranularity="@dimen/dimen_size_05"/>

        <TextView
            style="@style/style_small_light_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_mining_rate"/>

        <TextView
            android:id="@+id/tv_percentage"
            style="@style/style_small_grey_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <io.taucoin.android.wallet.widget.ProgressView
            android:id="@+id/iv_mining_power"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            app:center_text="@string/home_mining_power" />

    </LinearLayout>
</RelativeLayout>